.calendar
  width 100%
  border 1px solid $border-color
  padding-bottom 5px
  border-radius(4px)
  .calendar-head
  .calendar-body
    display block
    width 100%
  .calendar-head
    background $border-color-lighten
    text-align center
    line-height 44px
    border-bottom 1px solid $border-color
    margin-bottom 5px
    border-radius(4px 4px 0 0)
    box-sizing(border-box)
    a
      float left
      padding 0 16px
      border-right 1px solid $border-color
      line-height 44px
      &:last-child
        float right
        border-right none
        border-left 1px solid $border-color
    span
      font-size 21px
      text-transform uppercase
      font-weight 300
      color $primary-color
  .week
    display-flex()
    &.names
      color $secondary-color
      text-align center
      .day
        min-height auto
        line-height 32px
        background $border-color-lighten
    .day
      flex(0 1 32%)
      border 1px solid $border-color
      min-height 80px
      padding 4px
      margin 5px
      border-radius(2px)
      &:first-child
        margin-left 10px
      &:last-child
        margin-right 10px