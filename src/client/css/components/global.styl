body
  background $body-bg
  color $copy-color
  margin 0
  padding 0
  font-family Lato, Arial, Helvetica, sans-serif
a
  color $main-link
  text-decoration none
  &:hover
    color $main-link-hover
    text-decoration underline
  &[data-ng-click]
    cursor pointer
h1
h2
  text-transform uppercase
  margin 0 0 16px 0
  padding-bottom 4px
  font-size 21px
  font-weight 300
h2
  font-size 18px
  border-bottom 1px solid $border-color
  margin-top 32px
  color $secondary-color
h6
  color #bbb
  margin 12px 0 0 0
  font-size 12px
  font-weight 400
h6 + h1
  margin-top 0
hr
  border none
  border-top 1px solid $border-color
  margin 20px 0
  padding 0
img
  width auto
  max-width 100% !important
  display block
label
input
  display block
input
textarea
  width 100%
  box-sizing(border-box)
  background #fff
  border 1px solid $border-color
  box-shadow(0 2px 2px rgba(0,0,0,0.1))
  margin 0 0 16px 0
  padding 8px
  border-radius(4px)
p
  margin-top 0
button
  border none
  font-size inherit
  font-family inherit
  &:hover
    cursor pointer
.clear
  clear both
.wrapper
  width 100%
  max-width 1000px
  margin 0 auto
  padding 16px
  box-sizing(border-box)
.main-content
  background $body-bg
.pull-right
  float right
.btn
  display inline-block
  background $main-link
  border-radius(4px)
  color #fff
  line-height 1em
  margin-bottom 16px
  padding 9px 16px 10px
  text-align center
  &:hover
    color #fff
    background $main-link-hover
    text-decoration none
    cursor pointer
  &.btn-subtle
    background transparent
    color $main-link
    &:hover
      color $main-link-hover
      background #fff
.btn-panel
  .btn
    margin-right 16px
    &:last-child
      margin-right 0
.pills
  margin-bottom 16px
  &:after
    content ''
    display block
    clear both
.pill-label
.pill
  line-height 1.1em
  padding 8px 12px
  background #fff
  color $secondary-color
  box-shadow(0 2px 2px rgba(0,0,0,0.03))
  margin 8px 16px 8px 0
  border-radius(4px)
  float left
  display block
.pill-label
  background transparent
  box-shadow(none)
  border-radius(0)
  padding 8px 0
  color $copy-color