body
  background $body-bg
  margin 0
  padding 0
  font-family Lato, Arial, Helvetica, sans-serif
a
  color $main-link
  text-decoration none
  &:hover
    color $main-link-hover
    text-decoration underline
  &[data-ng-click]
    cursor pointer
h1
  text-transform uppercase
  margin 0 0 16px 0
  padding-bottom 4px
  font-size 21px
  font-weight 300
h6
  color #bbb
  margin 12px 0 0 0
  font-size 12px
  font-weight 400
h6 + h1
  margin-top 0
hr
  border none
  border-top 1px solid #ddd
  margin 20px 0
  padding 0
img
  width auto
  max-width 100% !important
  display block
label
input
  display block
input
textarea
  width 100%
  box-sizing(border-box)
  background #fff
  border 1px solid #ddd
  box-shadow(0 2px 2px rgba(0,0,0,0.2))
  margin 0 0 16px 0
  padding 8px
  border-radius(4px)
button
  border none
  font-size inherit
  font-family inherit
  &:hover
    cursor pointer
.clear
  clear both
.wrapper
  width 100%
  max-width 1000px
  margin 0 auto
  padding 16px
  box-sizing(border-box)
.main-content
  background $body-bg
.pull-right
  float right
.btn
  display inline-block
  background $primary-color
  border-radius(4px)
  color #fff
  line-height 1em
  margin-bottom 16px
  padding 9px 16px 10px
  text-align center
  &:hover
    color #fff
    background $secondary-color
    text-decoration none
    cursor pointer