.hero
  &.feature
    margin-top 30px
    padding 0
    height 300px
    overflow hidden
    background-color $primary-color
    > .col
      position relative
      &.half
        box-sizing(border-box)
        width 45%
      &:first-child
        padding 60px 36px 36px 36px
      &:nth-child(even)
        width 55%
        &:before
        &:after
          content ''
          position absolute
          top 0
          left 0
          width 0
          height 0
          border-right 200px solid transparent
          border-top 300px solid $primary-color
        &:before
          border-right-width 210px
          border-top-width 315px
          border-top-color #fff
      img
        border-radius(0 4px 4px 0)
        margin-top -50px
    h1
      font-size 28px
      font-weight 400
      margin-bottom 16px
    p
      font-size 17px
      font-weight 300
      line-height 1.5em
      color $subtle
  .btn-with-tag
    font-weight 400
    float left
    margin 12px 50px 0 0
    &:nth-child(even)
      margin-right 0
    .btn
      margin-bottom 3px
      background-color $primary-darkest
    p
      font-size 12px
      color $secondary-feature
      text-align center
.sub-feature
  padding 36px
  p
    line-height 1.5em
    font-size 18px
    color $copy-lighten
  .col
    position relative
  i.icon
    font-size 70px
    color $secondary-color
    position absolute
    top 0
    left 0
    &.icon-dd-logo
      top -12px
  .content
    padding-left 100px
  h1
    font-size 30px
    color $secondary-color
  a
    &:hover
      img
        opacity 0.8
.banner
  background #fff
  border 1px solid $border-color
  border-radius(6px)
  box-shadow(0 2px 2px rgba(0,0,0,0.05))
  padding 30px 30px 14px 260px
  position relative
  p
    line-height 1.5em
    font-size 18px
    color $copy-lighten
  img
    position absolute
    top 50%
    left 30px
    width 200px
    margin-top -78px
  a
    &:hover
      img
        opacity 0.8
.thumbs
  &.single
    margin 0
    display block
    .thumb
      margin 0
      overflow hidden
      .image-label
        position absolute
        top 30px
        right -130px
        bottom auto
        left auto
        background $secondary-color
        color #fff
        font-size 16px
        width auto
        line-height 1em
        padding 10px 150px 12px
        border-radius(0)
        transform(rotate(30deg))
        box-shadow(0 2px 2px rgba(0,0,0,0.2))