.header
  background #fff
  border-bottom 1px solid #e3e3e3
  img
    height 24px
    padding 16px 0
  .wrapper
    padding 0 16px
.navigation
  margin 0
  padding 0
  float right
  &:after
    content ''
    display block
    clear both
  li
    list-style none
    margin 0
    padding 0
    float left
    display block
    a
      padding 16px
      display block
      line-height 24px
      &:hover
        text-decoration none
        background #fafafa