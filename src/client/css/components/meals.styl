ul.meal-list
  border none
  margin 0
  &.meal-times
    margin-top 8px
  li
    border none
    padding 2px 0 2px 72px
    position relative
    span
      font-size 10px
      text-transform uppercase
      color $copy-lighten
      display inline-block
      position absolute
      top 5px
      left 20px
      &.helper-text
        position static
    strong
      font-weight normal
    i
      color $subtle
      font-size small
      position absolute
      top 4px
      left 0
.image-container
  position relative
  a.btn
    position absolute
    bottom 8px
    right 8px
    padding 8px 12px
    margin 0
.meal-details
  padding 4px 16px 16px 16px
  

// Weekly Meals Calendar Styling
.meals-calendar
  width 100%
  border 1px solid $border-color-lighten
  border-radius(4px)
  .meals-calendar-head
  .meals-calendar-body
    display block
    width 100%
  .meals-calendar-head
    background $background-lighten
    text-align center
    line-height 42px
    border-bottom 1px solid $border-color-lighten
    margin-bottom 5px
    border-radius(4px 4px 0 0)
    box-sizing(border-box)
    a
      float left
      padding 0 16px
      border-right 1px solid $border-color-lighten
      line-height 44px
      text-decoration none
      &:last-child
        float right
        border-right none
        border-left 1px solid $border-color-lighten
      &:hover
        background #fff
        color $primary-color
    span
      font-size 21px
      text-transform uppercase
      font-weight 300
      color $primary-color
  .week
    display-flex()
    padding 0 5px 5px 5px
    &.names
      color $secondary-color
      text-align center
      .day
        min-height auto
        line-height 40px
        background $background-lighten
        border-color $border-color-lighten
    .day
      flex(0 1 32%)
      border 1px solid $border-color
      min-height 70px
      margin 5px
      background #fff
      position relative
      overflow hidden
      border-radius(4px)
      box-sizing(border-box)
      &:first-child
        margin-left 10px
        display none
      &:last-child
        margin-right 10px
        display none
      &.different-month
        border-color $border-color-lighten
        color $subtle
        background none
      > a
        padding 10px 12px
        position absolute
        top 0
        left 0
        width 100%
        height 100%
        box-sizing(border-box)
        display-flex()
        align-items center
        justify-content center
        text-decoration none
        span.btn
          display none
        &:hover
          span.btn
            display inline-block
      .title
        position absolute
        bottom 0
        left 0
        padding 10px 12px
        background rgba(255,255,255,0.8)
        color $secondary-color
        z-index 3
        width 100%
        box-sizing(border-box)
        border-radius(0 0 2px 2px)
        transition(all .1s ease)
      img
        width 100%
        border-radius(4px)
        transition(all .1s ease)
      .date
        position absolute
        top 0px
        left 10px
        color #fff
        font-size 60px
        font-weight 300
        line-height 1em
        opacity 0.7
        text-shadow 0 2px 4px rgba(0, 0, 0, 0.5)
      &.today
        box-shadow(0 3px 6px rgba(0, 0, 0, 0.3))
        background $background-lighten
        border 3px solid $secondary-color
        .title    
          background rgba(131, 42, 120, 0.9)
          color #fff
        img
          border-radius(2px)
      &:hover
        > img
          filter blur(2px)
          transform scale(1.2)
        .title
          background rgba(255,255,255,0.9)
        &.today
          .title
            background rgba(131, 42, 120, 0.9)
    &.this-week
      .day
        font-size 14px
        &.different-month
          border-color $border-color
          color $copy-color
          background #fff
        &.today
          box-shadow(0 3px 6px rgba(0, 0, 0, 0.1))
          border 3px solid $secondary-color
          .meal-details
            a.btn
              background $main-link
        img
          border-radius(2px 2px 0 0)
        .meal-details
          a.btn
            display block
            background $copy-lighten
            &:hover
              background $main-link-hover
        h3
          font-size 16px
          padding 10px 16px
          background $body-bg
          border-bottom 1px solid $border-color-lighten
        h4
          font-size 16px
          color $copy-lighten
          text-align center
        &:hover
          > img
            filter none
            transform none
      .meal-preview
        display none
  &.admin-preview
    max-width 300px
    margin 0 auto
    .week
      display block
      padding 0
      .day
        display block
        margin 0 0 24px 0
        &:first-child
        &:last-child
          display block
          margin 0
        .image-container
          min-height 70px
          
