.splash
  background $primary-color
  position fixed
  top 0
  left 0
  width 100%
  height 100%
  color #fff
  .wrapper
    width 300px
  .logo
    width 140px
    margin 20px auto 50px
  .btn
    display block
    background $secondary-color
    &[type=submit]
      display inline
      margin-right 16px
  form
    a
      color $secondary-color
      margin-top 7px