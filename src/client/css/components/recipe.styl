.recipe
  padding-top 16px
  border-top 1px solid $border-color
  &:after
    content ''
    display block
    clear both
  .info
    font-size 12px
    color $copy-lighten
    margin-bottom 16px
    &:after
      content ''
      display block
      clear both
    p
      margin-bottom 0
    .timestamp
      float right
      text-align right
      width 50%    
    .source
      float left
      width 50%    
  .details
    &.full
      float none
      width auto
      display block
    .full-table
      margin-bottom 24px
      th
        background #fefefe
        border-bottom 1px solid #f8f8f8
        font-size 12px
        &:first-child
          text-align center
.remove
  margin-left 8px
  &:before
  &:after
    content '[ '
    display inline
    color #999
    &:hover
      text-decoration none
  &:after
    content ' ]'
ul.list
  &.ingredients
  &.filters
    border-top none
.filters
  label
  a
    color $copy-lighten
    &:hover
    &.active
      cursor pointer
      color $secondary-color
    // input[checked]
    //   + span
    //     color $secondary-color
.recipe-url
  margin-bottom 16px
  overflow-wrap break-word
  word-wrap break-word
.sort
  position absolute
  top 4px
  right 0
  a.active
    color $copy-color
    &:hover
      cursor default
      color $copy-color
      text-decoration none
.searchbox
  position relative
  .icon
    position absolute
    top 10px
    left 12px
    color $copy-lighten
  input
    padding-left 35px