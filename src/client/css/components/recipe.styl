.recipe
  padding-top 16px
  border-top 1px solid $border-color
  &:after
    content ''
    display block
    clear both
  .info
    font-size 12px
    color $copy-lighten
    margin-bottom 16px
    &:after
      content ''
      display block
      clear both
    p
      margin-bottom 0
    .timestamp
      float right
      text-align right
      width 50%    
    .source
      float left
      width 50%    
  .details
    &.full
      float none
      width auto
      display block
    .full-table
      margin-bottom 24px
      th
        background #fefefe
        border-bottom 1px solid #f8f8f8
        font-size 12px
        &:first-child
          text-align center
.remove
  margin-left 8px
  &:before
  &:after
    content '[ '
    display inline
    color #999
    &:hover
      text-decoration none
  &:after
    content ' ]'
ul.list
  &.ingredients
  &.filters
    border-top none
.filters
  label
  a
    color $copy-lighten
    &:hover
    &.active
      cursor pointer
      color $secondary-color
    // input[checked]
    //   + span
    //     color $secondary-color
.recipe-url
  margin-bottom 16px
  overflow-wrap break-word
  word-wrap break-word
.sort
  a.active
    color $copy-color
    &:hover
      cursor default
      color $copy-color
      text-decoration none
.searchbox
  position relative
  .icon
    position absolute
    top 10px
    left 12px
    color $copy-lighten
  input
    padding-left 35px
.thumbs
  list-style none
  margin 16px 0
  padding 0
  display-flex()
  flex-wrap(wrap)
  &:after
    content ''
    display block
    clear both
  .thumb
    flex(0 1 32%)
    position relative
    background #fff
    margin 0 2% 24px 0
    border 1px solid $border-color
    border-radius(4px)
    box-shadow(0 2px 2px rgba(0,0,0,0.1))
    box-sizing(border-box)
    &:nth-child(3n)
      margin-right 0
    img
      display block
      width 100%
      height 100%
      padding 4px
      box-sizing(border-box)
      border-radius(7px)
    span
      position absolute
      bottom 0
      left 0
      padding 10px 16px 12px
      background rgba(255,255,255,0.9)
      color $secondary-color
      z-index 3
      width 100%
      box-sizing(border-box)
      border-radius(0 0 7px 7px)
    .icon-cross
      position absolute
      z-index 4
      padding 8px
      right 8px
      top 8px
      color #fff
      text-shadow 0 0 3px rgba(0,0,0,0.2)
      &:hover
        color $secondary-color
        cursor pointer
    a
      width 100%
      height 100%
      display block
      &:hover
        background rgba(255,255,255,0.3)
        img
          opacity 0.7
        span
          color $primary-darken
          background #fff
.view-options
  &:after
    content ''
    display block
    clear both