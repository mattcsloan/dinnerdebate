@media all and (max-width : 768px)
  .header
    .logo
      margin-left -60px
      width 120px
      padding 0 16px
    .wrapper
      padding 0
  .navigation
    li
      a
        padding 21px 18px
        line-height 24px
        &.active
          padding-top 18px
  h2
    margin-top 21px
  .med-hide
    display none

