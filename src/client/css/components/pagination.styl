.pagination
  margin 0 0 16px 0
  padding 0
  li
    list-style none
    float left
    margin 4px
    a
      display block
      padding 10px 12px
      background rgba(255,255,255,0.7)
      color $main-link
      border 1px solid $border-color
      border-radius(4px)
      min-width 20px
      text-align center
      &:hover
        color $main-link-hover
        background #fff
        text-decoration none
        box-shadow(0 2px 2px rgba(0,0,0,0.1))
        border-color $subtle

    &.active
      a
        background $main-link
        color #fff
        border 1px solid transparent