modal(show="mealDescription")
  h2.modal-title(data-ng-bind="'Meal Overview - ' + mealDate")
  .columns
    .col.half
      h3(data-ng-if="mealDescription.mainItem.name && mealDescription.mainItem.categoryKey && mealDescription.mainItem.key")
        a(data-ui-sref="recipes.view({categoryKey: mealDescription.mainItem.categoryKey, recipeName: mealDescription.mainItem.key})", data-ng-bind="mealDescription.mainItem.name" target="_blank")
      h3(data-ng-if="mealDescription.mainItem.name && (!mealDescription.mainItem.categoryKey || !mealDescription.mainItem.key)", data-ng-bind="mealDescription.mainItem.name")
      ul.list.meal-list(data-ng-if="mealDescription.items", data-ng-repeat="section in mealDescription.items")
        li(data-ng-repeat="item in section.items", data-ng-if="item.name !== mealDescription.mainItem.name")
          i.icon.icon-plus.mgn-right-8
          span(data-ng-if="section.name && section.name !== 'Appetizer'", data-ng-bind="section.name + ':'") 
          span(data-ng-if="section.name && section.name === 'Appetizer'") App:
          strong(data-ng-if="!item.categoryKey || !item.key", data-ng-bind="item.name")
          a(data-ng-if="item.categoryKey && item.key && item.name !== mealDescription.mainItem.name", data-ui-sref="recipes.view({categoryKey: item.categoryKey, recipeName: item.key})", data-ng-bind="item.name", target="_blank")
            strong(data-ng-bind="item.name")
      ul.list.meal-list.meal-times(data-ng-if="mealDescription.prepTime || mealDescription.cookTime")
        li(data-ng-if="mealDescription.prepTime")
          i.icon.icon-clock.mgn-right-8
          span Prep: 
          strong(data-ng-bind="mealDescription.prepTime")
          span.mgn-left-8.helper-text Minutes
        li(data-ng-if="mealDescription.cookTime")
          i.icon.icon-alarm.mgn-right-8
          span Cook: 
          strong(data-ng-bind="mealDescription.cookTime")
          span.mgn-left-8.helper-text Minutes
      div(data-ng-if="mealDescription.mealUrl && mealDescription.mealUrl.indexOf('blog.thedinnerdebate.com') > -1")
        h4 View it on our blog
        a.btn.mgn-btm-8(data-ng-href="{{mealDescription.mealUrl}}", target="_blank") Full Meal Details
      div(data-ng-if="mealDescription.mealUrl && mealDescription.mealUrl.indexOf('blog.thedinnerdebate.com') === -1")
        a.btn.mgn-top-16.mgn-btm-8(data-ng-href="{{mealDescription.mealUrl}}", target="_blank") Full Meal Details


